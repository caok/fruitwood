= simple_form_for(@comment ||= target, :html => { :class => "form-horizontal" }) do |f|
  = f.error_notification

  -#.form-inputs
  = f.input :content, :input_html => {:rows => 12, :class => 'span12'}, :as => 'uploadable', :label => false
  = f.hidden_field :user_id, :value => @comment.user_id
  = f.hidden_field :attach, :value => @comment.attach


  -#.form-actions
  = f.button :submit

  = render 'markdown_guide'
