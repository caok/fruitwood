= simple_form_for [@commentable, @comment], :remote => true, :html => { :class => 'form-vertical' } do |f|
  = f.input :content, :label => false, :input_html => { :rows => 6, :class => "span12" }
  = f.hidden_field :user_id, :value => current_user.id
  = f.button :submit, :class => ['btn', 'btn-primary', 'pull-right']
