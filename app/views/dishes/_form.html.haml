.well
  %fieldset
    .page-header
      %h3= t 'dishes.edit.title'
      = link_to t('helpers.links.new_category'), new_category_path, target: "_blank", :class => 'pull-right'
    = simple_form_for @dish, :html => { :class => "form-horizontal" } do |f| 
      = f.error_notification

      .form-inputs
        = f.input :name, :input_html => { :class => 'span5' }
        = f.input :price, :input_html => { :class => 'span5' }
        = f.association :category
        = f.input :cover, :input_html => {:rows => 12, :class => 'span5'}, :as => 'uploadable'
        = f.input :content, :input_html => {:rows => 12, :class => 'span5'}, :as => 'uploadable'
      .form-actions
        = f.button :submit, :class => ['btn', 'btn-info']
        = link_to t("helpers.links.cancel"), root_path, :class => 'btn'
